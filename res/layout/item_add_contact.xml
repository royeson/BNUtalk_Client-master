<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="100dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="90dp" >

    <View
        android:id="@+id/item_swipe_left_indicator"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:alpha="0"
        android:background="@drawable/home_card_like" />

    <View
        android:id="@+id/item_swipe_right_indicator"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:alpha="0"
        android:background="@drawable/home_card_dislike" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/material_card"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/helloText"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
             android:src="@drawable/card_bg"
            android:padding="1dp"
            android:textColor="@android:color/white"
            android:textSize="40sp" />

        <RelativeLayout
            android:id="@+id/helloText1"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/helloText" >

            <TextView
                android:id="@+id/card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:text="兔兔"
                android:textColor="#333"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/card_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/card_name"
                android:text="18"
                android:textColor="#878787"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_card_gender"
                android:layout_width="18dp"
                android:layout_height="18dp"
                 android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/man"
                android:layout_toRightOf="@id/card_year"
                android:layout_weight="1"/>
            

            <ImageView
                android:id="@+id/iv_card_flag1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/mother_language" />

            <TextView
                android:id="@+id/card_mother_lanuage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="63dp"
                android:layout_toRightOf="@id/iv_card_flag1"
                android:text="英语"
                android:textColor="#878787"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/iv_card_flag2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/want_language" />

            <TextView
                android:id="@+id/card_want_lanuage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="103dp"
                android:layout_toRightOf="@id/iv_card_flag2"
                android:text="中文"
                android:textColor="#878787"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/helloText1" >

            <ImageView
                android:id="@+id/iv_card_flag3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/address_picture" />

            <TextView
                android:id="@+id/card_address"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/iv_card_flag3"
                android:text="北京师范大学东操场"
                android:textColor="#878787"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/iv_card_flag4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/iv_card_flag3" 
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/college" />

            <TextView
                android:id="@+id/card_college"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_address" 
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/iv_card_flag4"
                android:text="经济与工商管理学院"
                android:textColor="#878787"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/iv_card_flag5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                 android:layout_below="@id/card_college" 
                 android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/music" />

            <ImageView
                android:id="@+id/iv_card_flag6"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_below="@id/card_college" 
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/iv_card_flag5"
                android:background="@drawable/music_borcast" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>